<form action="/book" method="post">
    Name: <input type="text" name="name" required readonly value="<%= name %>"> <br>
    Total Room : <input type="number" name="total_room" required autofocus> <br>
    Hotel:
    <select name="HotelId">
        <!-- looping data -->
        <% data.forEach(el => { %>
        <option value="<%= el.id %>"><%= optionFormat(el) %> </option>
        <% }) %>
    </select> <br>
    <input type="submit" value="BookMe!">


</form>